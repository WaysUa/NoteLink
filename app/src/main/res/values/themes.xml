<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NoteLink" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/cornsilk</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="android:background">@color/cornsilk</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackgroundFloating">@color/beige</item>
    </style>

    <style name="Theme.NoteLink.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.NoteLink.AppWidgetContainer" parent="Theme.NoteLink.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>